#!/bin/bash

WALLPAPER_DIR="$HOME/Pictures/wallpapers"
STARTUP_NAME="startup"
VALID_EXTS=("jpg" "jpeg" "png" "webp")

find_wallpaper() {
    local relpath="$1"
    for ext in "${VALID_EXTS[@]}"; do
        candidate="$WALLPAPER_DIR/$relpath.$ext"
        if [[ -f "$candidate" ]]; then
            echo "$candidate"
            return 0
        fi
    done
    return 1
}

list_monitors() {
    hyprctl monitors | awk '/Monitor/ {print $2}'
}

# --list: List all wallpapers except startup.*
if [[ "$1" == "--list" ]]; then
    find "$WALLPAPER_DIR" -type f \( -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" -o -iname "*.webp" \) |
    while read -r file; do
        rel="${file#$WALLPAPER_DIR/}"
        name="${rel%.*}"
        [[ "$(basename "$name")" == "$STARTUP_NAME" ]] && continue
        echo "$name"
    done
    exit 0
fi

# --set-startup <name>: Copy image to startup.*
if [[ "$1" == "--set-startup" ]]; then
    [[ -z "$2" ]] && { echo "Usage: wallpaper --set-startup <name>"; exit 1; }

    src=$(find_wallpaper "$2") || { echo "Wallpaper '$2' not found."; exit 1; }

    ext="${src##*.}"
    cp "$src" "$WALLPAPER_DIR/$STARTUP_NAME.$ext"
    echo "Startup wallpaper set to '$2'"
    exit 0
fi

# Set wallpaper immediately (modern hyprpaper way)
if [[ -n "$1" ]]; then
    wp=$(find_wallpaper "$1") || { echo "Wallpaper '$1' not found."; exit 1; }

    # Preload once
    hyprctl hyprpaper preload "$wp" >/dev/null

    # Apply explicitly to all current monitors
    for monitor in $(list_monitors); do
        hyprctl hyprpaper wallpaper "$monitor,$wp"
    done

    exit 0
fi

# Help
echo "Usage:"
echo "  wallpaper <name>                Set wallpaper immediately (IPC, no reload)"
echo "  wallpaper --list                List available wallpapers (excludes 'startup')"
echo "  wallpaper --set-startup <name> Set a wallpaper as the startup one"
