#!/bin/bash

TARGET="$1"

if [ -z "$TARGET" ]; then
    echo "Usage: connect <target>"
    exit 1
fi

if [ "$TARGET" = "home" ]; then
    sudo iw wlp0s20f3 scan >/dev/null 2>&1
    nmcli connection up my5gssid

elif [ "$TARGET" = "school" ]; then
    nmcli connection up student

elif [ "$TARGET" = "teacher" ]; then
    nmcli connection up teacher

else
    echo "Unknown target: $TARGET"
    exit 1
fi
